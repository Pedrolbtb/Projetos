<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--style do container que abriga o login-->
    <style name="ContainerComponents">

        <!--o match parente faz a width pegar toda a extensao do layout-->
        <item name="android:layout_width">match_parent</item>

        <!--valor da altura do container-->
        <item name="android:layout_height">250dp</item>

        <!--puxando os components do background direto do drawable-->
        <item name="android:background">@drawable/container_components</item>

        <!--margem do container-->
        <item name="android:layout_margin">20dp</item>


    </style>
    
    <style name="Campos_login">

        <!--width do campo vai pegar toda a extensao da view, dps arrumamos-->
        <item name="android:layout_width">match_parent</item>

        <!--a width pega apenas o quanto estiver usando-->
        <item name="android:layout_height">wrap_content</item>

        <!--puxando as coisas do style do -->
        <item name="android:background">@drawable/campo_login</item>

        <!--padding do campo-->
        <item name="android:padding">20dp</item>

        <!--margem a esquerda do campo-->
        <item name="android:layout_marginLeft">40dp</item>

        <!--margem a direita do campo-->
        <item name="android:layout_marginRight">40dp</item>

        <!--margem para cima do campo-->
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <style name="btn_login">
        
        <item name="android:layout_width">match_parent</item>
        
        <item name="android:layout_height">wrap_content</item>
        
        <item name="android:layout_marginLeft">40dp</item>
        
        <item name="android:layout_marginTop">15dp</item>

        <item name="android:layout_marginRight">40dp</item>

        <item name="backgroundColor">@drawable/button_login</item>

        <item name="android:padding">20dp</item>
        
        <item name="android:textColor">@color/off_white</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:textStyle">bold</item>


        
    </style>




</resources>