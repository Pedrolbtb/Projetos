<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--style do container que abriga o login-->
    <style name="ContainerComponents">

        <!--o match parente faz a width pegar toda a extensao do layout-->
        <item name="android:layout_width">match_parent</item>

        <!--valor da altura do container-->
        <item name="android:layout_height">270dp</item>

        <!--puxando os components do background direto do drawable-->
        <item name="android:background">@drawable/container_components</item>

        <item name="android:layout_marginRight">20dp</item>

        <item name="android:layout_marginLeft">20dp</item>


    </style>


    <!--Style do botão de login-->
    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/Letras</item>
        <item name="fontFamily">@font/cloudsoft_bold_700</item>
    </style>

<style name="Radio_Button">

    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">10dp</item>
    <item name="android:textColor">@color/Letras</item>
    <item name="android:textSize">14sp</item>
    <item name="fontFamily">@font/cloudsoft_bold_700</item>
    <item name="buttonTint">@color/Letras</item>

</style>


    <style name="Edit_Text_Login">

        <!--limita a quantidade de caracteres-->
        <item name="android:maxLength">25</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--puxando o style drawlable/edittext-->
        <item name="android:background">@drawable/edit_text</item>
        <!--padding do campo-->
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:textColor">@color/hint</item>
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">@font/cloudsoft_bold_700</item>
    </style>
    
    <!--titulo da tela de cadastro/login-->
    <style name="Titulo">
        <item name="android:layout_marginTop">70dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">70sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/Letras</item>
        <item name="fontFamily">@font/peanut_butter</item>
    </style>
    
    <!--texto de apoio, como explicação que é para marcar genero-->
    <style name="text">
        
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/Letras</item>
        <item name="fontFamily">@font/cloudsoft_bold_700</item>
        
    </style>

    <style name="sos">
        <item name="background">@drawable/sos</item>
        <item name="android:layout_width">248dp</item>
        <item name="android:layout_height">248dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">60sp</item>
        <item name="fontFamily">@font/cloudsoft_bold_700</item>
    </style>

    <style name="breadcrumpL">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/hint</item>
        <item name="fontFamily">@font/cloudsoft_bold_700</item>
    </style>

    <style name="Button_salvar">
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/Letras</item>
        <item name="fontFamily">@font/cloudsoft_bold_700</item>
    </style>

    <style name="Button_retornar">
        <item name="android:background">@drawable/button_voltar</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/Letras</item>
        <item name="fontFamily">@font/cloudsoft_bold_700</item>
    </style>

    <style name="Edit_Text_Perfil">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--puxando o style drawlable/edittext-->
        <item name="android:background">@drawable/edit_text</item>
        <!--padding do campo-->
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/cloudsoft_bold_700</item>
    </style>

    <style name="layout_campos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/Letras</item>
        <item name="hintEnabled">false</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/Letras</item>
    </style>

    <style name="foto">
        <item name="android:background">@drawable/foto</item>
    </style>
   


</resources>