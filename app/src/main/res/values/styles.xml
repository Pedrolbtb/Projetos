<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--style do container que abriga o login-->
    <style name="ContainerComponents">

        <!--o match parente faz a width pegar toda a extensao do layout-->
        <item name="android:layout_width">match_parent</item>

        <!--valor da altura do container-->
        <item name="android:layout_height">250dp</item>

        <!--puxando os components do background direto do drawable-->
        <item name="android:background">@drawable/container_components</item>

        <!--margem do container-->
        <item name="android:layout_margin">20dp</item>


    </style>
    
    <style name="Campos_login">

        <!--width do campo vai pegar toda a extensao da view, dps arrumamos-->
        <item name="android:layout_width">match_parent</item>

        <!--a width pega apenas o quanto estiver usando-->
        <item name="android:layout_height">wrap_content</item>

        <!--puxando as coisas do style do -->
        <item name="android:background">@drawable/campo_login</item>

        <!--padding do campo-->
        <item name="android:padding">20dp</item>

        <!--margem a esquerda do campo-->
        <item name="android:layout_marginLeft">40dp</item>

        <item name="fontFamily">@font/cloudsoft_bold_700</item>

        <!--margem a direita do campo-->
        <item name="android:layout_marginRight">40dp</item>

        <!--margem para cima do campo-->
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <!--botao de escolha medico ou paciente-->
    <style name="btn_mxp">

        <!--largura do botao-->
        <item name="android:layout_width">match_parent</item>

        <!--altura do botao-->
        <item name="android:layout_height">wrap_content</item>

        <item name="fontFamily">@font/cloudsoft_bold_700</item>

        <!--margem para esquerda do botao-->
        <item name="android:layout_marginLeft">40dp</item>

        <!--margem para cima do botao-->
        <item name="android:layout_marginTop">20dp</item>

        <!--margem para direita do botao-->
        <item name="android:layout_marginRight">40dp</item>

        <!--padding do botao-->
        <item name="android:padding">15dp</item>

        <!--cor od texto dentro do botao-->
        <item name="android:textColor">@color/marrom</item>

        <!--instruçao para a escrita dentro do botao nao ser so maiuscula-->
        <item name="android:textAllCaps">false</item>

        <item name="android:textSize">20dp</item>

        <!--margem para cima do campo-->
        <item name="android:textStyle">bold</item>

        <item name="elevation">10dp</item>

    </style>

    <!--Style do botão de login-->
    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/marrom</item>

    </style>

    <!--style do container que abriga o login-->
    <style name="ContainerComponents">

        <item name="android:layout_width">match_parent </item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/container_components</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <!--Style do editText alguma coisa-->
    <style name="Edit_Text">

        <!--limita a quantidade de caracteres-->
        <item name="android:maxLength">25</item>

        <item name="android:layout_width">match_parent</item>

        <item name="android:layout_height">wrap_content</item>

        <!--puxando o style drawlable/edittext-->
        <item name="android:background">@drawable/edit_text</item>

        <!--padding do campo-->
        <item name="android:padding">20dp</item>

        <item name="android:layout_marginLeft">40dp</item>

        <item name="android:layout_marginRight">40dp</item>

        <item name="android:layout_marginTop">10dp</item>

    </style>


</resources>