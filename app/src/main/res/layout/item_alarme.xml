<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="325dp"
    android:layout_height="137dp"
    android:elevation="2dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="15dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_widget">

    <View
        android:id="@+id/card_fotoitem"
        android:background="@drawable/container_foto_widget"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="27dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <androidx.cardview.widget.CardView
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/fotoitem"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/horario"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:textColor="#6096a8"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/card_fotoitem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.717" />

    <TextView
        android:id="@+id/nome_remedio"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:textColor="#6096a8"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/card_fotoitem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.353" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/seta_direita" />

    <TextView
        android:id="@+id/tipoitem"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginStart="135dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:textColor="#2B8B46"
        android:textSize="15sp"
        android:gravity="end"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/card_fotoitem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</android.support.constraint.ConstraintLayout>