<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/off_white">

    <ImageButton
        android:id="@+id/btn_voltarpop"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/arrow_voltar_vermelho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/lixeira_remedios"
        android:layout_width="50dp"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:src="@drawable/delete_lista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/nomere"
        style="@style/text_doenca_e_remedio"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="550dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:layout_width="130dp"
        android:layout_height="126dp"
        android:layout_marginBottom="355dp"
        android:elevation="2dp"
        android:background="@drawable/remedio_foto_widget"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="126dp"
        android:layout_height="122dp"
        android:layout_marginBottom="355dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

       >


        <ImageView
            android:id="@+id/foto_Remedio"
            android:layout_width="126dp"
            android:layout_height="122dp"
            />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/observação"
        style="@style/text_doenca_e_remedio"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="150dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textAlignment="center"
        android:elevation="2dp"
        android:text="@string/text_observacao_medicamento"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <android.support.constraint.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.500684" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_descAlarme"
        style="@style/Edit_Text_Login"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="332dp"
        android:drawableTint="@color/Letras"
        android:gravity="top"
        android:hint="@string/desc_alarme"
        android:inputType="textMultiLine"
        android:nextFocusForward="@id/edit_senha"
        android:textColor="@color/Letras"
        android:textColorHint="@color/hint"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prescrito_por"
        style="@style/text_doenca_e_remedio"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp"
        android:elevation="2dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:text="@string/text_prescrição"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.703" />

    <Spinner
        android:id="@+id/medicoSpinner"
        android:layout_width="260dp"
        android:layout_height="59dp"
        android:background="@drawable/spinner"
        android:elevation="345dp"
        android:gravity="top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="535dp" />

</android.support.constraint.ConstraintLayout>

