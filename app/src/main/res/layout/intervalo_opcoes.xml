<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="345dp"
    android:layout_height="70dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="15dp"
    android:elevation="2dp"
    tools:context=".Alarme.EscolhaFrequencia"
    >

    <TextView
        style="@style/text_botoesAlarme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relembre a cada"
        android:textColor="@color/hint"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_intervalo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/layout_campos"
        android:elevation="4dp"
        app:suffixText="@string/text_horas"
        android:layout_marginBottom="25dp"
        android:textColor="@color/Letras"
        app:expandedHintEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:suffixTextColor="@color/hint">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextHoraemHora"
        style="@style/Edit_Text_Login"
        android:layout_width="120dp"
        android:maxLength="2"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:autofillHints="aa"
        android:ems="10"
        android:inputType="number"
        android:textSize="16sp"
        />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
