<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="325dp"
    android:layout_height="95dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="15dp"
    android:elevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_widget">

    <View
        android:background="@drawable/doenca_foto_widget"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="27dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_fotoitem"
        android:layout_width="59dp"
        android:background="@drawable/remedio_foto_widget"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/fotoitem"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nomeitem"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:textColor="#6096a8"
        android:textSize="23sp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="@+id/card_fotoitem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tipoitem"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginStart="135dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:textColor="#2B8B46"
        android:textSize="15sp"
        android:gravity="end"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="@+id/card_fotoitem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/seta_direita" />





</android.support.constraint.ConstraintLayout>