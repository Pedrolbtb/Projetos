<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio.Inicio">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_home">

        <ImageButton
            android:id="@+id/btn_config"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="92dp"
            android:background="#00FFFFFF"
            android:onClick="irParaTelaConfig"
            android:scaleType="fitXY"
            android:src="@drawable/engrenagem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />





        <TextView
            android:id="@+id/text_iniciodoenca"
            style="@style/text_doenca_e_remedio"
            android:layout_marginTop="145dp"
            android:layout_marginEnd="215dp"
            android:text="@string/text_doencas_inicio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/card_diabete"
            />

        <View
            android:id="@+id/card_diabete"
            android:layout_width="320dp"
            android:layout_height="147dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="430dp"
            android:background="@drawable/view_doenca"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_inicioremedio"
            style="@style/text_doenca_e_remedio"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="350dp"
            android:text="@string/text_remedio_inicio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_diabete" />

        <View
            android:id="@+id/card_remedio1"
            android:layout_width="320dp"
            android:layout_height="95dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="270dp"
            android:background="@drawable/view_remedio_"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_inicioremedio" />

        <View
            android:id="@+id/card_remedio2"
            android:layout_width="320dp"
            android:layout_height="95dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="150dp"
            android:background="@drawable/view_remedio_"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_remedio1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
