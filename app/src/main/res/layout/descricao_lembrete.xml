<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    tools:context=".Inicio.Calendario">


    <ImageButton
        android:id="@+id/btn_voltarDO"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="1dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/button_back"
        android:padding="15dp"
        android:src="@drawable/arrow_voltar_vermelho"
        android:text="@string/button_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/lixeira_doencas"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:contentDescription="Apagar"
        android:src="@drawable/delete_lista"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:elevation="2dp"
        android:layout_marginBottom="590dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:text="Descrição do lembrete"
        android:textColor="@color/Letras"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.629" />

    <View
        android:id="@+id/view_descLembrete"
        style="@style/Container_Evento"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="60dp"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493" />

    <View
        android:id="@+id/container_titulo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/container_linha"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_descLembrete"
        app:layout_constraintEnd_toEndOf="@id/view_descLembrete"
        app:layout_constraintStart_toStartOf="@id/view_descLembrete"
        app:layout_constraintTop_toTopOf="@+id/view_descLembrete" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="470dp"
        android:elevation="2dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:text="Título"
        android:textColor="@color/Letras"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/view_descLembrete"
        app:layout_constraintEnd_toEndOf="@+id/view_descLembrete"
        app:layout_constraintStart_toStartOf="@+id/view_descLembrete"
        app:layout_constraintTop_toTopOf="@id/view_descLembrete"
        app:layout_constraintVertical_bias="0.629" />


    <TextView
        android:id="@+id/titulo"
        style="@style/text_doenca_e_remedio"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="390dp"
        android:elevation="2dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:text=""
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/view_descLembrete"
        app:layout_constraintEnd_toEndOf="@id/view_descLembrete"
        app:layout_constraintStart_toStartOf="@id/view_descLembrete"
        app:layout_constraintTop_toTopOf="@id/view_descLembrete"
        app:layout_constraintVertical_bias="0.98" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:elevation="2dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:text="Descrição"
        android:textColor="@color/Letras"
        android:textSize="24sp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="@id/view_descLembrete"
        app:layout_constraintEnd_toEndOf="@+id/view_descLembrete"
        app:layout_constraintStart_toStartOf="@+id/view_descLembrete"
        app:layout_constraintTop_toTopOf="@id/view_descLembrete"
        app:layout_constraintVertical_bias="0.629" />

    <TextView
        android:id="@+id/descricao_lembrete"
        style="@style/text_doenca_e_remedio"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="100dp"
        android:elevation="2dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:text=""
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/view_descLembrete"
        app:layout_constraintEnd_toEndOf="@id/view_descLembrete"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@id/view_descLembrete"
        app:layout_constraintTop_toTopOf="@id/view_descLembrete"
        app:layout_constraintVertical_bias="0.98" />


</androidx.constraintlayout.widget.ConstraintLayout>