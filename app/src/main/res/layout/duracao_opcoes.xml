<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="345dp"
    android:layout_height="70dp"
    android:id="@+id/layout_calendarioAlarme"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="15dp"
    android:elevation="2dp"
    tools:context=".Alarme.ConfigDuracao"
    >

    <TextView
        style="@style/text_botoesAlarme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_lembreme"
        android:textColor="@color/hint"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/textView_calendarioAlarme"
        style="@style/text_botoesAlarme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text=""
        android:drawablePadding="5dp"
        android:textColor="@color/Letras"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:drawableEndCompat="@drawable/arrow_down" />


</androidx.constraintlayout.widget.ConstraintLayout>
