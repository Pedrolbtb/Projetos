<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background_home">

    <ImageButton
        android:id="@+id/btn_voltarpop"
        android:layout_width="53dp"
        android:layout_height="37dp"
        android:layout_marginTop="32dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_voltar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view_descRemedio"
        android:layout_width="360dp"
        android:layout_height="590dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_widget"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458" />

    <TextView
        android:id="@+id/nomedo"
        style="@style/text_doenca_e_remedio"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="480dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@id/view_descRemedio"
        app:layout_constraintEnd_toEndOf="@id/view_descRemedio"
        app:layout_constraintStart_toStartOf="@id/view_descRemedio"
        app:layout_constraintTop_toTopOf="@id/view_descRemedio" />

    <TextView
        android:id="@+id/descricao1"
        android:layout_width="255dp"
        android:layout_height="225dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:gravity="center"
        android:textColor="@color/black"
        android:elevation="2dp"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/view_descRemedio"
        app:layout_constraintEnd_toEndOf="@id/view_descRemedio"
        app:layout_constraintStart_toStartOf="@id/view_descRemedio"
        app:layout_constraintTop_toBottomOf="@+id/nomere"
        />


    <!-- Ajuste para centralizar verticalmente -->


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_doenca"
        android:layout_width="155dp"
        android:layout_height="52dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_editar"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:text="@string/text_adc_doenca"
        android:textColor="@color/off_white"
        app:layout_constraintBottom_toBottomOf="@id/view_descRemedio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descricao1"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:layout_width="130dp"
        android:layout_height="126dp"
        android:layout_marginBottom="255dp"
        android:elevation="2dp"
        android:background="@drawable/remedio_foto_widget"
        app:layout_constraintBottom_toBottomOf="@id/view_descRemedio"
        app:layout_constraintEnd_toEndOf="@id/view_descRemedio"
        app:layout_constraintStart_toStartOf="@id/view_descRemedio"
        app:layout_constraintTop_toTopOf="@id/view_descRemedio" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="126dp"
        android:layout_height="122dp"
        android:layout_marginBottom="255dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintBottom_toBottomOf="@id/view_descRemedio"
        app:layout_constraintEnd_toEndOf="@id/view_descRemedio"
        app:layout_constraintStart_toStartOf="@id/view_descRemedio"
        app:layout_constraintTop_toTopOf="@id/view_descRemedio">


        <ImageView
            android:id="@+id/foto_Doenca"
            android:layout_width="126dp"
            android:layout_height="122dp"
            android:background="@drawable/doenca_foto_widget"
            />


    </androidx.cardview.widget.CardView>

    <android.support.constraint.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.500684" />


</android.support.constraint.ConstraintLayout>