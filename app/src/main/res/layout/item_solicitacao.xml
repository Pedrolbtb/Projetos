<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/background_widget">


    <TextView
        android:id="@+id/tvNomeSolicitante"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/cloudsoft_bold_700"
        android:textStyle="bold"
        android:text="Nome do Solicitante"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/btnAceitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/off_white"
        android:text="@string/text_aceitar"
        android:fontFamily="@font/cloudsoft_light_300"


        />

    <Button
        android:id="@+id/btnRejeitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/off_white"
        android:text="@string/text_rejeitar"
        android:fontFamily="@font/cloudsoft_light_300"

        />
</LinearLayout>
