<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio.CriaAlarme"
    android:background="@color/off_white">

    <NumberPicker
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="40dp"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <View
        android:id="@+id/containerAlarme"
        android:background="@drawable/container_alarme"
        android:layout_width="410dp"
        android:layout_height="430dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_nome_alarme"
        style="@style/layout_campos"
        android:textColor="@color/Letras"
        app:expandedHintEnabled="false"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/containerAlarme"
        app:suffixTextColor="@color/hint">

        <!-- campos de altura-->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_nome_alarme"
            style="@style/Edit_Text_Login"
            android:layout_width="match_parent"
            android:drawableTint="@color/Letras"
            android:hint="Nome do Alarme"
            android:inputType="text"
            android:nextFocusForward="@id/edit_senha"
            android:textColor="@color/Letras"
            android:textColorHint="@color/hint" />
    </com.google.android.material.textfield.TextInputLayout>


        <View
            android:id="@+id/container_som"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_nome_alarme"
            />

        <TextView
            android:id="@+id/somdoalarme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Som do Alarme"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/cloudsoft_bold_700"
            android:textColor="@color/black"
            android:layout_marginStart="90dp"
            app:layout_constraintTop_toTopOf="@id/container_som"
            app:layout_constraintStart_toStartOf="@id/container_som"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:text="homecoming"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/somdoalarme"
            />

        <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        app:trackTint="@color/black"
        app:thumbTint="@color/Letras"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_nome_alarme"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>