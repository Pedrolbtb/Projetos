<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:background="@color/white"

    android:layout_margin="20dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/fotoremedio"
        android:layout_width="120dp"
        android:layout_height="120dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/nomeRemedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="remedio"
        android:textSize="20sp"
        android:textColor="@color/black"

        android:textStyle="bold"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="@id/fotoremedio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/descriçãoRemedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="remedio para diabetes sdsddsdsdssdsdsdssdsdsdsdsdsdsdsdsddsdds"
        android:textSize="16sp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:maxLines="4"
        app:layout_constraintTop_toBottomOf="@+id/nomeRemedio"
        app:layout_constraintStart_toEndOf="@+id/fotoremedio"
        app:layout_constraintEnd_toEndOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>