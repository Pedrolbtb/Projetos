<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    tools:context=".Alarme.ConfigFrequencia">


    <ImageButton
        android:id="@+id/btnVoltar"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="357dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/button_back"
        android:padding="15dp"
        android:src="@drawable/arrow_voltar_vermelho"
        android:text="@string/button_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_alarme"
        style="@style/text_doenca_e_remedio"
        android:layout_marginBottom="540dp"
        android:text="@string/prog_do_alarme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/View_Programacao"
        style="@style/Container_Alarme"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/container_components"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.506" />

    <View
        android:id="@+id/container_Frequencia"
        style="@style/container_linha"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="480dp"
        android:background="@drawable/container_linha"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/View_Programacao"
        app:layout_constraintEnd_toEndOf="@id/View_Programacao"
        app:layout_constraintStart_toStartOf="@id/View_Programacao"
        app:layout_constraintTop_toTopOf="@+id/View_Programacao" />

    <TextView
        android:id="@+id/programacaoalarme"
        style="@style/text_botoesAlarme"
        android:layout_marginEnd="227dp"
        android:layout_marginBottom="20dp"
        android:elevation="1dp"
        android:text="@string/frequencia"
        app:layout_constraintBottom_toBottomOf="@+id/container_Frequencia"
        app:layout_constraintEnd_toEndOf="@id/container_Frequencia"
        app:layout_constraintStart_toStartOf="@id/container_Frequencia"
        app:layout_constraintTop_toTopOf="@+id/container_Frequencia" />

    <TextView
        android:id="@+id/descFrequencia"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="15dp"
        android:elevation="1dp"
        android:text="1 vez ao dia"
        app:layout_constraintBottom_toBottomOf="@+id/container_Frequencia"
        app:layout_constraintEnd_toEndOf="@+id/container_Frequencia"
        app:layout_constraintStart_toStartOf="@+id/container_Frequencia"
        app:layout_constraintTop_toBottomOf="@+id/programacaoalarme" />

    <View
        android:id="@+id/container_DuracaoAlarme"
        style="@style/container_linha"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="410dp"
        android:background="@drawable/container_linha"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/View_Programacao"
        app:layout_constraintEnd_toEndOf="@id/View_Programacao"
        app:layout_constraintStart_toStartOf="@id/View_Programacao"
        app:layout_constraintTop_toBottomOf="@id/container_Frequencia" />

    <TextView
        android:id="@+id/duracaodolembrete"
        style="@style/text_botoesAlarme"
        android:layout_marginEnd="255dp"
        android:layout_marginBottom="20dp"
        android:elevation="1dp"
        android:text="@string/duracao"
        app:layout_constraintBottom_toBottomOf="@+id/container_DuracaoAlarme"
        app:layout_constraintEnd_toEndOf="@id/container_DuracaoAlarme"
        app:layout_constraintStart_toStartOf="@id/container_DuracaoAlarme"
        app:layout_constraintTop_toTopOf="@+id/container_DuracaoAlarme" />

    <TextView
        android:id="@+id/descduracao"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="15dp"
        android:elevation="1dp"
        android:text="@string/text_data_acabar"
        app:layout_constraintBottom_toBottomOf="@+id/container_DuracaoAlarme"
        app:layout_constraintEnd_toEndOf="@+id/container_DuracaoAlarme"
        app:layout_constraintStart_toStartOf="@+id/container_DuracaoAlarme"
        app:layout_constraintTop_toBottomOf="@+id/duracaodolembrete" />

    <TextView
        android:id="@+id/detalhesdolembrete"
        style="@style/text_botoesAlarme"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="370dp"
        android:elevation="1dp"
        android:text="@string/det_lembre"
        app:layout_constraintBottom_toBottomOf="@+id/View_Programacao"
        app:layout_constraintEnd_toEndOf="@id/View_Programacao"
        app:layout_constraintStart_toStartOf="@id/View_Programacao"
        app:layout_constraintTop_toBottomOf="@id/container_DuracaoAlarme" />


    <View
        android:id="@+id/container_apartir"
        style="@style/container_linha"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="170dp"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/View_Programacao"
        app:layout_constraintEnd_toEndOf="@id/View_Programacao"
        app:layout_constraintStart_toStartOf="@id/View_Programacao"
        app:layout_constraintTop_toBottomOf="@id/container_Frequencia" />

    <TextView
        android:id="@+id/apartir"
        style="@style/text_botoesAlarme"
        android:layout_marginEnd="230dp"
        android:elevation="1dp"
        android:text="@string/apart_de"
        app:layout_constraintBottom_toBottomOf="@+id/container_apartir"
        app:layout_constraintEnd_toEndOf="@id/container_apartir"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@id/container_apartir"
        app:layout_constraintTop_toTopOf="@+id/container_apartir"
        app:layout_constraintVertical_bias="0.192" />


    <TextView
        android:id="@+id/hora_apartir"
        style="@style/text_botoesAlarme"
        android:layout_marginStart="240dp"
        android:elevation="1dp"
        android:text="00:00"
        android:textColor="@color/hint"
        app:layout_constraintBottom_toBottomOf="@+id/container_apartir"
        app:layout_constraintEnd_toEndOf="@id/container_apartir"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@id/container_apartir"
        app:layout_constraintTop_toTopOf="@+id/container_apartir"
        app:layout_constraintVertical_bias="0.192" />

    <Button
        android:id="@+id/select_hora"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/Letras"
        android:text="Selecione a hora"
        android:textColor="@color/ic_launcher_vihva_background"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/container_apartir"
        app:layout_constraintEnd_toEndOf="@+id/container_apartir"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintStart_toStartOf="@+id/container_apartir"
        app:layout_constraintTop_toBottomOf="@+id/hora_apartir"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
